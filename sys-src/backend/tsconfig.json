{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "target": "es5",
        "importsNotUsedAsValues": "error",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        },
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue"]
}
